<%= form_for (@user),  html: {class: 'form-horizontal'} do |f| %>
	
	<div class="container">
		<div class="rowspan">
			<div class="col-md-3">
				<%=  f.label :name, 'Nama', class: 'control-label'%>
			</div>
			<div class="col-md-9">
				<%=  f.text_field :name, class: 'form-control-lg'%>

			</div>
			<div class="col-md-12">
				<%=  f.submit 'Simpan', class: 'btn btn-success' %>
				
			</div>
		</div>
	</div>

	<% end %>

