
<%= form_for :user, url: users_path, html: { class: "form-horizontal "}  do |f| %>
	 
	<div class="container">
		<div class="row">
			<div class="form-group">
				<div class="col-md-2">
          <%=  f.label :name, 'Nama', class: 'control-label'%>
        </div>
        <div class="col-md-6">
				<%=  f.text_field :name, class: 'form-control'%>
			</div>
			</div>
		</div>

    <div class="row">
			<div class="form-group">
        <div class="col-md-2">
          <%=  f.label :address, 'Alamat', class: 'control-label'%>  
        </div>
        <div class="col-md-6">
				<%=  f.text_area :address, class: 'form-control'%>
			</div>
			</div>
		</div>
		
		<div class="row">
				<div class="form-group">
					<%=  f.submit 'Simpan', class: 'btn btn-success' %> | <%=  link_to 'Back', users_path, class: "btn btn-info" %></div>
				<div class="col-md-9"> 
					 </div>
		</div>
	

		<div class="row">
			<div class="col-md-12">
				 <% if @user.errors.any? %>
			    <div id="error_explanation">
			      <h2>
			        <%= pluralize(@user.errors.count,'') %> Sebagai Berikut :
			      </h2>
			      <ul>
			        <% @user.errors.full_messages.each do |msg| %>
			          <li><%= msg %></li>
			        <% end %>
			      </ul>
			    </div>
			  <% end %>
			</div>
		</div>
		<% end %>
	</div>
